<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.opengldemo2.CustomGLSurfaceView
        android:id="@+id/custom_gl_surface_view"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/custom_gl_surface_view"
        android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/seekX"
        android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/seekY"
        android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/fov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/seekZ"
        android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>